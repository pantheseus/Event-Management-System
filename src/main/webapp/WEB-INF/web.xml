<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         id="WebApp_ID" version="4.0">

  <display-name>EventManagement</display-name>

  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.xhtml</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.xhtml</welcome-file>
  </welcome-file-list>

  <!-- Register Servlet -->
  <servlet>
    <servlet-name>RegisterServlet</servlet-name>
    <servlet-class>com.event.RegisterServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RegisterServlet</servlet-name>
    <url-pattern>/RegisterServlet</url-pattern>
  </servlet-mapping>

  <!-- Login Servlet -->
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.event.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/LoginServlet</url-pattern>
  </servlet-mapping>

  <!-- Event List Servlet -->
  <servlet>
    <servlet-name>EventListServlet</servlet-name>
    <servlet-class>com.event.EventListServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>EventListServlet</servlet-name>
    <url-pattern>/EventListServlet</url-pattern>
  </servlet-mapping>

  <!-- Event Register Servlet -->
  <servlet>
    <servlet-name>EventRegisterServlet</servlet-name>
    <servlet-class>com.event.EventRegisterServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>EventRegisterServlet</servlet-name>
    <url-pattern>/EventRegisterServlet</url-pattern>
  </servlet-mapping>

</web-app>
